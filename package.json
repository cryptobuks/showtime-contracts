{
    "name": "showtime-contracts",
    "version": "1.0.0",
    "description": "Truffle project for the development of Solidity Smart Contracts for Showtime",
    "main": "truffle-config.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "test": "truffle test --network test",
        "deploy": "truffle migrate",
        "deploy:ganache": "truffle migrate",
        "deploy:mumbai_testnet": "truffle migrate --network mumbai_testnet",
        "deploy:polygon_mainnet": "truffle migrate  --network matic_mainnet",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nonceblox/showtime-contracts.git"
    },
    "keywords": [
        "Showtime",
        "NFT",
        "Marketplace"
    ],
    "author": "Nonceblox",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/nonceblox/showtime-contracts/issues"
    },
    "homepage": "https://github.com/nonceblox/showtime-contracts#readme",
    "dependencies": {
        "@openzeppelin/contracts": "^3.4.0",
        "@openzeppelin/contracts-upgradeable": "^3.4.0",
        "@truffle/hdwallet-provider": "^1.4.0",
        "dotenv": "^10.0.0",
        "truffle-assertions": "^0.9.2",
        "web3": "^1.3.6"
    },
    "devDependencies": {
        "ganache-cli": "^6.12.2",
        "husky": "^7.0.1",
        "lint-staged": "^11.1.2",
        "prettier": "^2.3.2",
        "prettier-plugin-solidity": "^1.0.0-beta.17",
        "shelljs": "^0.8.4",
        "truffle": "^5.3.10",
        "truffle-flattener": "^1.5.0",
        "truffle-plugin-verify": "^0.5.15"
    },
    "lint-staged": {
        "*.{js,json,md,sol}": "prettier --write"
    }
}
